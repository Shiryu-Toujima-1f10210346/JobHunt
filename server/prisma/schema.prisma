datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model Company {
  id                   Int      @id @default(autoincrement())
  companyId            Int
  companyName          String
  annualincome         String
  industry             String
  local                String
  occupation           String
  occupationdetail     String[]
  jobdescription       String
  jobdescriptiondetail String[]
  businesscontent      String
  requiredability      String
  publicationstartdate String
}

model CompanyDetail {
  id                   Int      @id @default(autoincrement())
  companyId            Int
  companyName          String
  annualincome         String
  industry             String
  local                String
  occupation           String
  occupationdetail     String[]
  jobdescription       String
  jobdescriptiondetail String[]
  businesscontent      String
  requiredability      String
  publicationstartdate String

model User {
  userId            String   @id
  birthday          DateTime
  address           String
  education         String
  schooltype        String
  schoolname        String
  acdemicdiscipline String
  favoritegame      String
  createdAt         DateTime
  firstname         String
  lastname          String

}
